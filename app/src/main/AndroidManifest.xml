<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mprog.friendsandfood">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FriendsListActivity"
            android:label="List with friends"
            />
        <activity android:name=".NearRestaurantActivity"
            android:label="Restaurants near user"
            />
        <activity android:name=".ReadReviewActivity"
            android:label="Read reviews"
            />
        <activity android:name=".SelectedRestaurantActivity"
            android:label="Information about selected restaurant"
            />
        <activity android:name=".WriteReviewActivity"
            android:label="Write a review about a restaurant you have been."
            />
        <activity android:name=".YourReviewsActivity"
            android:label="List of your own reviews"
            />
    </application>

</manifest>